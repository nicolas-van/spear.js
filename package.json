{
  "name": "widgetjs",
  "version": "2.0.0",
  "description": "widgetjs framework",
  "main": "dist/widgetjs.bundle.js",
  "author": "Nicolas Vanhoren",
  "license": "MIT",
  "keywords": [
    "widget",
    "framework"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nicolas-van/widget.js.git"
  },
  "scripts": {
    "build": "webpack",
    "lint": "eslint src/**.js",
    "test": "npm run lint && npm run build && jest"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-loader": "^9.1.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-plugin-compat": "^2.2.0",
    "jest": "^29.3.1",
    "jquery": "^3.3.1",
    "legado": "^1.0.0",
    "webpack": "^5.75.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "no-console": "off",
      "indent": [
        "error",
        2
      ],
      "compat/compat": "error"
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "browserslist": [
    "> 1%",
    "IE >= 9",
    "not OperaMini all"
  ]
}
